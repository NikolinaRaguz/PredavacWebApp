<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aplikacija za evidenciju gostiju predavača</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div id="container">
                <img src="~/Content/slika/Captureeeee.jpg" style="width:100%" height="100" />
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Gosti predavači", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Početna stranica", "Index", "Home")</li>
                        <li>@Html.ActionLink("O nama", "About", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Kolegiji", "Index", "Kolegijs")</li>
                        <li>@Html.ActionLink("Predavači", "Index", "Predavacs")</li>
                        <li>@Html.ActionLink("Tražilica", "SearchIndex", "Kolegijs")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Aplikacija za evidenciju gostiju predavača <img src="~/Content/slika/indeksiraj.jpg" width="100" height="40" align="right" /></p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
