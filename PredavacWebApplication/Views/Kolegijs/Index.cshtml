@model IEnumerable<PredavacWebApplication.Models.Kolegij>

@{
    ViewBag.Title = "Kolegij";
}
<br />
<br />
<br />
<br />
<br />

<h2>Kolegij</h2>

<p>
    @Html.ActionLink("Dodaj kolegij", "Create")
</p>
<table class="table table-striped" style="color:midnightblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nositelj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudijskaGod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nositelj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudijskaGod)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
